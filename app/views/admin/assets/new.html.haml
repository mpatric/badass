%h2 New asset
%fieldset.admin
  = form_for @asset, :url => admin_assets_path, :html => { :multipart => true } do |form|
    = render :partial => '/admin/errors', :locals => { :errors => @asset.errors }
    = form.hidden_field :user_id, :value => @user.id
    %div
      = form.label :title
      = form.text_field :title
    %div
      %label Upload
      = form.file_field :upload
    %div
      = form.submit 'Create', :class => 'button'