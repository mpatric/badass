- if APP_CONFIG.google_analytics_enabled
  - if APP_CONFIG.google_site_verification
    %meta{:content => APP_CONFIG.google_site_verification, :name => "google-site-verification"}/
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '#{APP_CONFIG.google_analytics_id}']);
    _gaq.push(['_setDomainName', '.#{APP_CONFIG.domain}']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();